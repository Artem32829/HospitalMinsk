                </Border.Style>
                <Button Content="Печать больничного листа" FontSize="16" Foreground="Black" Margin="-0.8,1.2,-1,0" Click="TicketFail" Height="96" VerticalAlignment="Top" Background="#FFF0F7FF" BorderBrush="Black">
